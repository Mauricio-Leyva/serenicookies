---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "SereniCookies | Tu pausa perfecta, en forma de cookie", 
  description = "En SereniCookies, horneamos galletas con ingredientes de calidad y diversidad de sabores. Descubre nuestras deliciosas variedades." 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
		<title>{title}</title>
	</head>
	<body class="bg-cookie-cream min-h-screen flex flex-col">
		<slot />
	</body>
</html>

<style is:global>
	/* Importaci√≥n de los estilos globales */
	@import "../styles/global.css";
</style>
